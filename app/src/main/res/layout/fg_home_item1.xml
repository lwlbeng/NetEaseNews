<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

    <ImageView
        android:id="@+id/fg_home_item1_iv"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/fg_home_item1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/fg_home_item1_iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="标题"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/fg_home_item1_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fg_home_item1_iv"
        android:layout_alignLeft="@+id/fg_home_item1_title"
        android:layout_marginBottom="3dp"
        android:text="标签"
        android:textSize="12sp"
        android:textColor="@color/gray_text"
        />
    <TextView
        android:id="@+id/fg_home_item1_replyCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟贴量"
        android:textSize="12sp"
        android:textColor="@color/gray_text"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/fg_home_item1_type"

        />
</RelativeLayout>